@model Codit.ViewModel.UserViewModel
@using Codit.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Codit
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/DesignUserMainPage/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/DesignUserMainPage/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/DesignUserMainPage/demo/demo.css" rel="stylesheet" />
    <link href='http://serve.fontsproject.com/css?family=Pfennig:500'
          rel='stylesheet' type='text/css'>
    <link href='http://serve.fontsproject.com/css?family=Felix007:400'
          rel='stylesheet' type='text/css'>
    <style>
        .center {
            margin: auto;
            width: 50%;
            padding: 15px;
        }

        .centerheader {
            margin: auto;
            width: 100%;
            padding: 10px 40px 10px 80px;
        }

        .green-background {
            background-color: green;
        }
        .HFont1 {
            font-family: 'Pfennig', serif;
            font-size: large;
        }

        .HFont2 {
            font-family: 'Felix007', serif;
            font-size: large;
        }

        .HeaderFont {
            font-family: 'Felix007',serif;
            font-size: xx-large;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">

            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/DesignUserMainPage/img/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    שלום @Model.employee.FirstName @Model.employee.LastName
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">

                    <li class="active ">
                        <a>
                            <i class="fa fa-institution"></i>
                            <p class="HFont1">@Html.ActionLink("דף בית", "index", "User")</p>
                        </a>
                    </li>
                    @if (Model.role.ManageEmployees.Equals("yes"))
                    {
                        <li>
                            <a>
                                <i class="fa fa-user"></i>
                                <p class="HFont1">@Html.ActionLink("ניהול משתמשים", "UsersManagement", "User")</p>
                            </a>
                        </li>
                    }
                    
                        <li>
                            <a>
                                <i class="fa fa-tv"></i>
                                <p class="HFont1">@Html.ActionLink("פרויקטים", "ProjectsManagement", "User")</p>
                            </a>
                        </li>
                    

                    <li>
                        <a>
                            <i class="	fa fa-newspaper-o"></i>
                            <p class="HFont1">@Html.ActionLink("דוחות", "ReportsManagementPage", "User")</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="#pablo">ניהול משתמשים</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navigation">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("newEmployeePage","User")">
                                    <p class="HFont1">
                                        הוספת עובד
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("UsersPage","User")">
                                    <p class="HFont1">
                                        משתמשים
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("UsersManagement","User")">
                                    <p class="HFont1">
                                        עובדים
                                    </p>
                                </a>
                            </li>


                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="	fa fa-cog"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block HFont1">הגדרות </span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">פרופיל</a>
                                    <a class="dropdown-item" href="@Url.Action("index","Home")"> התנתק</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-5 col-md-4">
                                    </div>
                                    <div class="col-7 col-md-8">

                                        <p class="card-category"></p>
                                        <p class="card-title">
                                        <p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-5 col-md-4">
                                    </div>
                                    <div class="col-7 col-md-8">

                                        <p class="card-category"></p>
                                        <p class="card-title">
                                        <p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card ">
                            <div class="" align="center" padding="10px">
                                <h5 class="HeaderFont">יצירת משתמש חדש</h5>
                            </div> 
                            <div align="center">
                                <div class="col-7 col-md-8 p-t-10">
                                    <form action="newUser" method="post" id="Reg">
                                        <table class="table ">
                                            <tr>
                                                <td><input class="form-control" type="text" id="nUsername" name="nUsername" required onfocusout="User_Check()" /></td>
                                                <td><font class="HFont1" color="black"><strong>שם משתמש</strong></font></td>
                                            </tr>
                                            <tr>
                                                <td><input class="form-control" type="password" name="nPassword" required /></td>
                                                <td><font class="HFont1" color="black"><strong>סיסמה</strong></font></td>
                                            </tr>
                                            <tr>
                                                <td class="HeaderFont"><p id="status"></p></td>
                                                <td></td>
                                            </tr>
                                        </table>
                                        
                                        <center>
                                            <p><input class="btn btn-primary btn-round HFont1" id="newEmployeeButton" type="submit" value="יצירה" style="visibility:hidden;"/></p>
                                        </center>
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                    <i class="fa fa-history"></i> Updated 3 minutes ago
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/DesignUserMainPage/js/core/jquery.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/popper.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/bootstrap.min.js"></script>
    <script src="~/DesignUserMainPage/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chart JS -->
    <script src="~/DesignUserMainPage/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/DesignUserMainPage/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/DesignUserMainPage/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/DesignUserMainPage/demo/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
            demo.initChartsPages();
        });
    </script>
    
    <script>
     function User_Check() {
         $("#status").html("...בודק");
         $.post("@Url.Action("CheckLogInInformation", "User")",
             {
                 username1: $("#nUsername").val()
             },
             function (data) {
                 if (data == 0) {
                     $("#status").html('<font color="Green">.שם משתמש תקיו</font>');
                     document.getElementById("nUsername").style.backgroundColor = "";

                     document.getElementById("newEmployeeButton").style.visibility = "visible";
                 } else if (data == 1) {
                     $("#status").html('<font color="Red">!שם משתמש קיים</font>');
                     document.getElementById("nUsername").style.backgroundColor = "red";
                     document.getElementById("newEmployeeButton").style.visibility = "hidden";

                 }
            }
         );
    }
    </script>
    
</body>
</html>

