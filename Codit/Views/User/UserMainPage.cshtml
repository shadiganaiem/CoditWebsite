@model Codit.ViewModel.UserViewModel
@using Codit.Models;
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/DesignUserMainPage/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/DesignUserMainPage/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Codit
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/DesignUserMainPage/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/DesignUserMainPage/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/DesignUserMainPage/demo/demo.css" rel="stylesheet" />
    <link href='http://serve.fontsproject.com/css?family=Pfennig:500'
          rel='stylesheet' type='text/css'>
    <link href='http://serve.fontsproject.com/css?family=Felix007:400'
          rel='stylesheet' type='text/css'>

    <style>
        .HFont1 {
            font-family: 'Pfennig', serif;
            font-size: large;
        }

        .HFont2 {
            font-family: 'Felix007', serif;
            font-size: large;
        }

        .HeaderFont {
            font-family: 'Felix007',serif;
            font-size: xx-large;
        }
    </style>
</head>
<body background="~/images/bg-01.jpg;">
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">

            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/DesignUserMainPage/img/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    שלום @Model.employee.FirstName @Model.employee.LastName
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">

                    <li class="active ">
                        <a>
                            <i class="fa fa-institution"></i>
                            <p class="HFont1">@Html.ActionLink("דף בית", "index", "User")</p>
                        </a>
                    </li>
                    @if (Model.role.ManageEmployees.Equals("yes"))
                    {
                        <li>
                            <a>
                                <i class="fa fa-user"></i>
                                <p class="HFont1">@Html.ActionLink("ניהול משתמשים", "UsersManagement", "User")</p>
                            </a>
                        </li>
                    }
                    
                        <li>
                            <a>
                                <i class="fa fa-tv"></i>
                                <p class="HFont1">@Html.ActionLink("פרויקטים", "ProjectsManagement", "User")</p>
                            </a>
                        </li>
                    

                    <li>
                        <a>
                            <i class="	fa fa-newspaper-o"></i>
                            <p class="HFont1">@Html.ActionLink("דוחות", "ReportsManagementPage", "User")</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand HFont1" href="#pablo">ניהול לקוחות - דף ראשי</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navigation">

                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("newClientPage","User")">
                                    <p class="HFont1">
                                        הוספת לקוח
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("index","User")">
                                    <p class="HFont1">
                                        לקוחות
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="	fa fa-cog"></i>
                                    <p class="HFont1">
                                        <span class="d-lg-none d-md-block">הגדרות </span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">פרופיל</a>
                                    <a class="dropdown-item" href="@Url.Action("index","Home")"> התנתק</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <form class="row" action="Search" method="post">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="input-group no-border">
                            <input type="text" value="" class="form-control" placeholder="...חיפוש" id="CSearch" name="CSearch" onfocusout="search()">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <select class="form-control" id="stype" name="stype">
                            <option>שם פרטי</option>
                            <option>שם משפחה</option>
                            <option>ת"ז</option>
                            <option>דוא"ל</option>
                            <option>טלפון</option>
                            <option>חברה</option>
                            <option>עיר</option>
                            <option>כתובת</option>
                        </select>
                    </div>
                </form>


                <div class="row">
                    <div class="col-md-12">
                        <div class="card ">
                            <div class="" align="center" padding="10px">
                                <h5 class="HeaderFont">רשימת הלקוחות</h5>
                            </div>
                            <div class="col-md-12">
                                <table class="table">
                                    <thead class="text-primary">
                                        <tr>
                                            <th></th>
                                            <th>
                                                <div class="HFont1" align="center"> כתובת</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> עיר</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> חברה</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> טלפון</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> דוא"ל</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> ת"ז</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> שם משפחה</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center"> שם פרטי</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (Client client in Model.clients)
                                    {
                                        <tr class="active">
                                            <td>

                                                <button type="submit" style="border:0; background:none;" onclick="deleteClient()">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                                <input type="hidden" name="row" id="row" value="@client.CID" />

                                            </td>
                                            <td  class="HFont2" align="center">@client.Address</td>
                                            <td  class="HFont2" align="center">@client.City</td>
                                            <td  class="HFont2" align="center">@client.Company</td>
                                            <td  class="HFont2" align="center">@client.Phone</td>
                                            <td  class="HFont2" align="center">@client.Email</td>
                                            <td  class="HFont2" align="center">@client.ID</td>
                                            <td  class="HFont2" align="center">@client.LastName</td>
                                            <td  class="HFont2" align="center">@client.FirstName</td>
                                        </tr>

                                    }
                                </table>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                    <i class="fa fa-history"></i> Updated 3 minutes ago
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/DesignUserMainPage/js/core/jquery.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/popper.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/bootstrap.min.js"></script>
    <script src="~/DesignUserMainPage/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chart JS -->
    <script src="~/DesignUserMainPage/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/DesignUserMainPage/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/DesignUserMainPage/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/DesignUserMainPage/demo/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
            demo.initChartsPages();
        });
    </script>
    <script>
     function deleteClient() {
         
         $.post("@Url.Action("deleteClient", "User")",
             {
                 value: $("#row").val()
             },
             function (data) {
                 location.reload();
             }
         );
    }
    </script>
   
</body>
</html>

