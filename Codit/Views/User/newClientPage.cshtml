@model Codit.ViewModel.UserViewModel
@using Codit.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Codit
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/DesignUserMainPage/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/DesignUserMainPage/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />

    <link href='http://serve.fontsproject.com/css?family=Pfennig:500'
          rel='stylesheet' type='text/css'>
    <link href='http://serve.fontsproject.com/css?family=Felix007:400'
          rel='stylesheet' type='text/css'>

        <style >

            .HFont1 {
                font-family: 'Pfennig', serif;
                font-size: large;
            }

            .HFont2 {
                font-family: 'Felix007', serif;
                font-size: large;
            }

            .HeaderFont {
                font-family: 'Felix007',serif;
                font-size: xx-large;
            }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">

            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/DesignUserMainPage/img/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    שלום @Model.employee.FirstName @Model.employee.LastName
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">

                    <li class="active ">
                        <a>
                            <i class="fa fa-institution"></i>
                            <p class="HFont1">@Html.ActionLink("דף בית", "index", "User")</p>
                        </a>
                    </li>
                    @if (Model.role.ManageEmployees.Equals("yes"))
                    {
                        <li>
                            <a>
                                <i class="fa fa-user"></i>
                                <p class="HFont1">@Html.ActionLink("ניהול משתמשים", "UsersManagement", "User")</p>
                            </a>
                        </li>
                    }
                    
                        <li>
                            <a>
                                <i class="fa fa-tv"></i>
                                <p class="HFont1">@Html.ActionLink("פרויקטים", "ProjectsManagement", "User")</p>
                            </a>
                        </li>
                    

                    <li>
                        <a>
                            <i class="	fa fa-newspaper-o"></i>
                            <p class="HFont1">@Html.ActionLink("דוחות", "ReportsManagementPage", "User")</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand HFont1" href="#pablo">ניהול לקוחות</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navigation">

                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("newClientPage","User")">
                                    <p class="HFont1">
                                        הוספת לקוח
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("index","User")">
                                    <p class="HFont1">
                                        לקוחות
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="	fa fa-cog"></i>
                                    <p class="HFont1">
                                        <span class="d-lg-none d-md-block">הגדרות </span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">פרופיל</a>
                                    <a class="dropdown-item" href="@Url.Action("index","Home")"> התנתק</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card card-user">
                            <div class="image">
                                <img src="~/DesignUserMainPage/img/business.jpg" alt="...">
                            </div>
                            <div class="card-body">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar border-gray" src="~/DesignUserMainPage/img/client.png" alt="...">
                                        <h5 class="title HeaderFont">לקוח חדש</h5>
                                    </a>
                                </div>
                                <form  action="newClient" method="post">
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label class="HFont1">שם משפחה</label>
                                                <input type="text" class="form-control" name="LastName" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1">
                                            <div class="form-group">
                                                <label class="HFont1">שם פרטי</label>
                                                <input type="text" class="form-control" name="FirstName" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label class="HFont1">תעודת זהות</label>
                                                <input type="number" class="form-control"  name="ID" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1">
                                            <div class="form-group">
                                                <label class="HFont1">טלפון</label>
                                                <input type="number" class="form-control" name="Phone" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="HFont1">דואר אלקטרוני</label>
                                                <input type="email" class="form-control" name="Email" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 pr-1">
                                            <div class="form-group">
                                                <label class="HFont1">כתובת</label>
                                                <input type="text" class="form-control" name="Address" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4 px-1">
                                            <div class="form-group">
                                                <label class="HFont1">עיר</label>
                                                <input type="text" class="form-control" name="City" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4 pl-1">
                                            <div class="form-group">
                                                <label class="HFont1">חברה</label>
                                                <input type="text" class="form-control" name="Company" required>
                                            </div>
                                        </div>
                                    </div>
                                   
                                    <div class="row">
                                        <div class="update ml-auto mr-auto">
                                            <button type="submit" class="btn btn-primary btn-round HFont1">הוספה</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <hr>
                                <div class="button-container">
                                    <div class="row">
                                        
                                        <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                                            <h5>
                                                @Model.clients.Count
                                                <br>
                                                <small>לקוח מספר</small>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
        </div>
    <!--   Core JS Files   -->
    <script src="~/DesignUserMainPage/js/core/jquery.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/popper.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/bootstrap.min.js"></script>
    <script src="~/DesignUserMainPage/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chart JS -->
    <script src="~/DesignUserMainPage/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/DesignUserMainPage/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/DesignUserMainPage/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
            demo.initChartsPages();
        });
    </script>
   
</body>
</html>
