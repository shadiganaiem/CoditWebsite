@model Codit.ViewModel.UserViewModel
@using Codit.Models;
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Codit
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/DesignUserMainPage/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/DesignUserMainPage/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/DesignUserMainPage/demo/demo.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href='http://serve.fontsproject.com/css?family=Pfennig:500'
          rel='stylesheet' type='text/css'>
    <link href='http://serve.fontsproject.com/css?family=Felix007:400'
          rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
       
        .HFont1 {
            font-family: 'Pfennig', serif;
            font-size: large;
        }

        .HFont2 {
            font-family: 'Felix007', serif;
            font-size: large;
        }

        .HeaderFont {
            font-family: 'Felix007',serif;
            font-size: xx-large;
        }
        form.example button {
            float: left;
            width: 20%;
            padding: 5px;
            background: #ce5050;
            color: white;
            font-size: 15px;
            border: 1px solid grey;
            border-left: none;
            cursor: pointer;
        }
    </style>
</head>
<body background="~/images/bg-01.jpg;">
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">

            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/DesignUserMainPage/img/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    שלום @Model.employee.FirstName @Model.employee.LastName
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">

                    <li class="active ">
                        <a>
                            <i class="fa fa-institution"></i>
                            <p class="HFont1">@Html.ActionLink("דף בית", "index", "User")</p>
                        </a>
                    </li>
                    @if (Model.role.ManageEmployees.Equals("yes"))
                    {
                        <li>
                            <a>
                                <i class="fa fa-user"></i>
                                <p class="HFont1">@Html.ActionLink("ניהול משתמשים", "UsersManagement", "User")</p>
                            </a>
                        </li>
                    }
                    
                        <li>
                            <a>
                                <i class="fa fa-tv"></i>
                                <p class="HFont1">@Html.ActionLink("פרויקטים", "ProjectsManagement", "User")</p>
                            </a>
                        </li>
                    

                    <li>
                        <a>
                            <i class="	fa fa-newspaper-o"></i>
                            <p class="HFont1">@Html.ActionLink("דוחות", "ReportsManagementPage", "User")</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand Hfont1" href="#pablo">ניהול פרויקטים</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navigation">

                        <ul class="navbar-nav">
                            @if (Model.role.ManageProjects.Equals("yes"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn-magnify" href="@Url.Action("newProjectPage", "User")">
                                        <p class="HFont1">
                                            הוספת פרויקט
                                        </p>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link btn-magnify" href="@Url.Action("ProjectsManagement", "User")">
                                    <p class="HFont1">
                                        פרויקטים
                                    </p>
                                </a>
                            </li>



                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="	fa fa-cog"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">הגדרות</span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">פרופיל</a>
                                    <a class="dropdown-item" href="@Url.Action("index", "Home")"> התנתק</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <form class="row example" action="searchProject" method="post">
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <div class="input-group no-border">
                            <select class="form-control" id="stype" name="value" onchange="search()">
                                <option>כל הפרויקטים</option>
                                @foreach (Client client in Model.clients)
                                {
                                    <Option>@client.CID - @client.FirstName @client.LastName</Option>
                                }
                            </select>
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="" align="center">
                                <h4 class="HeaderFont"> רשימת פרויקטים</h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>
                                            @if (Model.role.ManageProjects.Equals("yes"))
                                            {
                                                <th></th>
                                            }
                                            <th>
                                                <div class="HFont1" align="center">סטטוס</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">תאריך סיום</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">תאריך התחלה</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">סה"כ שעות</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">שעות צפויות</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">פרויקט</div>
                                            </th>
                                            <th>
                                                <div class="HFont1" align="center">לקוח</div>
                                            </th>
                                            <th>
                                                <div class="Hfont1" align="center">#</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Project project in Model.projects)
                                        {
                                        <tr class="active">
                                            @if (Model.role.ManageProjects.Equals("yes"))
                                            {
                                                <td align="center">
                                                    <div class="row">
                                                        <form action="deleteProject" method="post">
                                                            <button type="submit" style="border:0; background:none;">
                                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                            </button>
                                                            <input type="hidden" name="row" id="row" value="@project.ProjectID" />
                                                        </form>
                                                        <form target="_blank" action="ExportPage" method="post">
                                                            <button type="submit" style="border:0; background:none; font-size:large;">
                                                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                                                            </button>

                                                            <input type="hidden" name="row" id="row" value="@project.ProjectID"/>
                                                        </form>
                                                    </div>
                                                </td>
                                            }
                                            <th><input class="form-control col-sm-8" type="text" value="@project.Status" id="@project.ProjectID" align="center" onfocusout="updateStatus(this.id)" /></th>
                                            <td class="HFont2" align="center">@project.EndDate</td>
                                            <td class="HFont2" align="center">@project.StartDate</td>
                                            <td class="HFont2" align="center">@project.SumHours</td>
                                            <td class="HFont2" align="center">@project.HoursLimit</td>
                                            <td class="HFont2" align="center">@project.ProjectName</td>
                                            <td class="HFont2" align="center">
                                                @foreach (Client client in Model.clients)
                                                {
                                                    if (client.CID == project.ClientID)
                                                    {
                                                        <p>@client.LastName @client.FirstName</p>
                                                    }
                                                }
                                            </td>
                                            <td class="HFont2">@project.ProjectID</td>
                                        </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/DesignUserMainPage/js/core/jquery.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/popper.min.js"></script>
    <script src="~/DesignUserMainPage/js/core/bootstrap.min.js"></script>
    <script src="~/DesignUserMainPage/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chart JS -->
    <script src="~/DesignUserMainPage/js/plugins/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/DesignUserMainPage/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/DesignUserMainPage/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/DesignUserMainPage/demo/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
            demo.initChartsPages();
        });
    </script>
    <script>
        function updateStatus(row) {
         $.post("@Url.Action("updateProjectStatus", "User")",
             {
                 id: row,
                 update: $("#" + row).val(),

             },
             function (data) {
             }
         );
    }
    </script>
</body>
</html>

